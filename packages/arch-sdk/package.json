{
  "name": "@repo/arch-sdk",
  "version": "0.0.1",
  "description": "Arch SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/a21ai/archway.git"
  },
  "bugs": {
    "url": "https://github.com/a21ai/archway/issues"
  },
  "homepage": "https://github.com/a21ai/archway/tree/main/packages/arch-sdk#readme",
  "keywords": [
    "saturn",
    "arch",
    "sdk"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "tsc",
    "test": "vitest"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./src/serde/instruction": {
      "types": "./dist/serde/instruction.d.ts",
      "import": "./dist/serde/instruction.js",
      "require": "./dist/serde/instruction.cjs"
    },
    "./src/struct/instruction": {
      "types": "./dist/struct/instruction.d.ts",
      "import": "./dist/struct/instruction.js",
      "require": "./dist/struct/instruction.cjs"
    },
    "./src/struct/runtime-transaction": {
      "types": "./dist/struct/runtime-transaction.d.ts",
      "import": "./dist/struct/runtime-transaction.js",
      "require": "./dist/struct/runtime-transaction.cjs"
    }
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "requirePragma": false,
    "insertPragma": false,
    "endOfLine": "lf"
  },
  "dependencies": {
    "@noble/curves": "^1.5.0",
    "@noble/hashes": "^1.4.0",
    "@scure/base": "^1.1.7",
    "borsh": "^2.0.0"
  }
}
