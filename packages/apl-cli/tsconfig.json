{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@repo/*": ["../*/src"],
      "@repo/arch-sdk": ["../arch-sdk/src"],
      "@repo/arch-sdk/*": ["../arch-sdk/src/*"],
      "@repo/apl-sdk": ["../apl-sdk/src"],
      "@repo/apl-sdk/*": ["../apl-sdk/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
