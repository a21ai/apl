{
  "name": "@repo/apl-sdk",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "pretest": "cd ../arch-sdk && yarn build",
    "test": "jest --no-cache"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./src/serde/token-instruction": {
      "types": "./dist/serde/token-instruction.d.ts",
      "import": "./dist/serde/token-instruction.js",
      "require": "./dist/serde/token-instruction.cjs"
    },
    "./src/constants": {
      "types": "./dist/constants.d.ts",
      "import": "./dist/constants.js",
      "require": "./dist/constants.cjs"
    },
    "./src/serde/instruction": {
      "types": "./dist/serde/instruction.d.ts",
      "import": "./dist/serde/instruction.js",
      "require": "./dist/serde/instruction.cjs"
    }
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.0",
    "typescript": "latest"
  },
  "dependencies": {
    "@noble/hashes": "^1.7.0",
    "@repo/arch-sdk": "*",
    "@scure/btc-signer": "^1.5.0",
    "@solana/web3.js": "^1.95.4",
    "bech32": "^2.0.0",
    "bip322-js": "^2.0.0",
    "bitcore-lib-inquisition": "^10.3.1",
    "borsh": "^2.0.0",
    "bitcoinjs-lib": "^6.1.5"
  }
}
