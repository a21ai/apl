{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@repo/*": ["../*/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
